SELECT pic.nid, pic.timestamp, pic.pid, if(prn.version = 'x.y.z', prn.version, concat(prn.version_major, '.', coalesce(prn.version_minor, '0'))) v, pis.name s, pic.category, pic.priority FROM project_issue_comments pic INNER JOIN project_issue_state pis ON pis.sid = pic.sid INNER JOIN project_release_nodes prn ON prn.nid = pic.rid WHERE pic.nid IN (SELECT DISTINCT nid FROM project_issues WHERE pid = 3060 UNION SELECT DISTINCT nid FROM project_issue_comments WHERE pid = 3060) ORDER BY pic.nid, pic.timestamp;
